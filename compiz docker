# What this does...
# Install compiz docker container over the host desktop
# Clear Linux OS related

#Install xfce4-desktop
swupd bundle-add xfce4-desktop

# Disable graphical target and create .xinitrc
sudo systemctl set-default multi-user.target 
echo "exec xfce4-session" > $HOME/.xinitrc
reboot and login and stype startx

# Xfce4 desktop
echo -e "FROM ubuntu \\nRUN apt update \\nRUN apt upgrade -y\\nRUN apt update -y\\nRUN apt install compizconfig-settings-manager compiz fusion-icon emerald -y" > /tmp/Dockerfile
sudo docker build -t compiz < /tmp/Dockerfile -
xhost local:${USER}
sudo docker run -it --privileged -e JACK_NO_AUDIO_RESERVATION=1 -v /dev/shm:/dev/shm:rw --net=host -e DISPLAY=${DISPLAY} compiz





# Enable graphical targer to fallback and ignore .xinirtc
# sudo systemctl set-default graphical.target
